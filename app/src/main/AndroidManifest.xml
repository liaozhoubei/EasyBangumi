<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.heyanle.easybangumi"
    tools:ignore="ImpliedTouchscreenHardware,MissingLeanbackLauncher,MissingLeanbackSupport">



    <uses-permission android:name="android.permission.INTERNET" />


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- productFlavors manifest will merger in it, so you would changing theirs manifest ,
        see other manifest ,ect . app/phone/AndroidManifest.xml  -->
    <application
        android:name=".EasyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/easy"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        tools:ignore="UnusedAttribute">


        <activity
            android:theme="@style/Theme.EasyBangumi"
            android:name=".crash.CrashActivity"
            android:process="com.heyanle.easybangumi.crash" />

    </application>

</manifest>